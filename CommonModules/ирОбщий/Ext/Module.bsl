Функция ТипОбъектаБДЛкс(ОбъектБД) Экспорт 
	
	Результат = ТипЗнч(ОбъектБД);
	Если Результат = Тип("Структура") Тогда 
		Имитатор = ОбъектБД.Методы;
	Иначе
		Имитатор = ОбъектБД;
