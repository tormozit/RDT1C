	Тогда
		ЧистыйЗаголовокФормы = Сред(ЭтаФорма.Заголовок, ПозицияРазделителя + СтрДлина(РазделительДлительности));
	Иначе
		ЧистыйЗаголовокФормы = ЭтаФорма.Заголовок;
