	#Если Сервер И Не Сервер Тогда
	    ДеревоИсточник = Новый ДеревоЗначений;
		ДеревоПриемник = Новый ДеревоЗначений;
	#КонецЕсли
	СтрокаСовпадающихКолонок = "";
	Разделитель = ",";
	КолонкиИсточника = ДеревоИсточник.Колонки;
