					//Продолжить;
				Иначе
					ПутьКДанным = Сред(Выражение, ПозицияТочки + 1);
				КонецЕсли;
				СхемаКолонок.Вставить(ИмяКолонки, ПутьКДанным);
				Прервать;
			КонецЦикла;
		КонецЦикла;	
	КонецЕсли;
	Возврат СхемаКолонок;
