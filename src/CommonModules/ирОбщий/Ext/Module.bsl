		Исключение
			//выхОписаниеОшибки = ПолучитьПричинуОшибки(ОписаниеОшибки());
			выхОписаниеОшибки = ОписаниеОшибки();
			Возврат Ложь;
		КонецПопытки;
		Возврат Истина;
	КонецЕсли; 
	
