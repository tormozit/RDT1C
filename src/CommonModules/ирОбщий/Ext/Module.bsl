Процедура ТабличноеПолеОбновитьТекстыПодваловЛкс(Знач ЭтаФорма, Знач ТабличноеПолеРезультата, Принудительно = Истина) Экспорт 
	#Если Сервер И Не Сервер Тогда
		ТабличноеПолеРезультата = Новый ТабличноеПоле;
	#КонецЕсли
	Если Не ТабличноеПолеРезультата.Подвал Тогда
		Возврат;
	КонецЕсли; 
	ОбщийТип = ОбщийТипДанныхТабличногоПоляЛкс(ТабличноеПолеРезультата);
	Если ОбщийТип = "Список" Тогда 
		Возврат;
	КонецЕсли; 
	Если ОбщийТип = "ТабличнаяЧасть" Или ОбщийТип = "НаборЗаписей" Тогда
		КолонкиКоллекции = ТабличноеПолеРезультата.Значение.ВыгрузитьКолонки().Колонки;
	Иначе
		КолонкиКоллекции = ТабличноеПолеРезультата.Значение.Колонки;
	КонецЕсли; 
	КоллекцияСтрок = ТабличноеПолеРезультата.Значение;
	Если ТипЗнч(КоллекцияСтрок) = Тип("ДеревоЗначений") Тогда
		КоллекцияСтрок = КоллекцияСтрок.Строки;
	КонецЕсли;
	КоличествоВыделенных = ТабличноеПолеРезультата.ВыделенныеСтроки.Количество();
	Если КоличествоВыделенных > 1 Тогда
		ВыделенныеСтроки = ирОбщий.ВыделенныеСтрокиТабличногоПоляЛкс(ТабличноеПолеРезультата, Ложь);
		КопияТаблицы = ТаблицаИлиДеревоЗначенийИзТаблицыФормыСКоллекциейЛкс(ТабличноеПолеРезультата, ВыделенныеСтроки,,,,, ЭтаФорма);
	Иначе
		ВыделенныеСтроки = Неопределено;
		КопияТаблицы = КоллекцияСтрок;
	КонецЕсли; 
	#Если Сервер И Не Сервер Тогда
		КопияТаблицы = Новый ТаблицаЗначений;
	#КонецЕсли
	СимволСуммы = "Σ";
	Если Истина
		И Не Принудительно 
		И КоличествоВыделенных <= 1
	Тогда
		Для Каждого Колонка Из ТабличноеПолеРезультата.Колонки Цикл
			Если Не Колонка.Видимость Тогда
				Продолжить;
			КонецЕсли;
			Если Лев(Колонка.ТекстПодвала, 1) = СимволСуммы Тогда
				Возврат;
			КонецЕсли;
		КонецЦикла;
	КонецЕсли;
	КоличествоУжеВыведено = Ложь;
	Для Каждого Колонка Из ТабличноеПолеРезультата.Колонки Цикл
		Если Не Колонка.Видимость Тогда
			Продолжить;
		КонецЕсли; 
		ДанныеКолонки = Колонка.Данные;
		СуммаКолонки = Неопределено;
		Если Истина
			И ЗначениеЗаполнено(ДанныеКолонки)
			И ДанныеКолонки <> "НомерСтроки"
			И КоллекцияСтрок.Количество() > 0 
		Тогда 
			ТипЗначения = КолонкиКоллекции.Найти(ДанныеКолонки).ТипЗначения;
			Если Ложь
				Или ТипЗначения.СодержитТип(Тип("Булево")) // Если у колонки составной тип, то Итог() не будет считать булевы значения
				Или ТипЗначения.СодержитТип(Тип("Число"))
			Тогда
				СуммаКолонки = КопияТаблицы.Итог(ДанныеКолонки);
			КонецЕсли; 
		КонецЕсли; 
		ТекстПодвала = "";
		Если СуммаКолонки = Неопределено Тогда
			Если Истина
				И Не КоличествоУжеВыведено 
				И (Ложь
					Или Колонка.Ширина > 5
					Или Колонка.ИзменениеРазмера = ИзменениеРазмераКолонки.Изменять)
			Тогда
				ТекстПодвала = "N" + КопияТаблицы.Количество();
				КоличествоУжеВыведено = Истина;
			КонецЕсли; 
			Колонка.ТекстПодвала = ТекстПодвала;
			Продолжить;
		КонецЕсли; 
		Если КоличествоВыделенных > 1 Тогда
			ТекстПодвала = "!";
		КонецЕсли; 
		ТекстПодвала = ТекстПодвала + СимволСуммы + СуммаКолонки;
		Колонка.ТекстПодвала = ТекстПодвала;
		Колонка.ГоризонтальноеПоложениеВПодвале = ГоризонтальноеПоложение.Право;
	КонецЦикла; 

