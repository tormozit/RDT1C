		МенеджерЗаписи.Значение = НовоеЗначение;
		Если ТаблицаДопСведения = Неопределено Тогда
			ДопСведения = НаборЗаписейИзКлючаЛкс(РегистрыСведений.ДополнительныеСведения.СоздатьНаборЗаписей(), МенеджерЗаписи, Истина);
