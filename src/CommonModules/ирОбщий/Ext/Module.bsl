				#КонецЕсли
				Результат = КонсольПостроителейОтчетов.ОткрытьДляОтладки(Объект, Модально);
			ИначеЕсли Ложь
				Или ТипЗнч(Объект) = Тип("СхемаКомпоновкиДанных") 
				Или ТипЗнч(Объект) = Тип("МакетКомпоновкиДанных")
			Тогда
