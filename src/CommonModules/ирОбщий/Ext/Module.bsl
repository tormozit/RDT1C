			УдалитьФайлы(ФайлРезультата.ПолноеИмя);
			Результат = СокрЛП(ТекстовыйДокумент.ПолучитьТекст());
		Иначе
			Результат = Неопределено;
		КонецЕсли;
	Иначе
		Результат = ФайлРезультата;
	КонецЕсли; 
	Если ЗначениеЗаполнено(Состояние) Тогда
		СостояниеЛкс("");
	КонецЕсли; 
