			ОболочкаПолеТекста = Обработки.ирОболочкаПолеТекста.Создать();
		#КонецЕсли
		ОболочкаПолеТекста.ЭлементФормы = ПолеТекста;
	Иначе
		ОболочкаПолеТекста = ПолеТекста;
