					КонецЕсли; 
				КонецЦикла;
				ТаблицаЗначений.Колонки.Удалить(Колонка.Имя);
			Иначе
				ТекстВыбораПолей = ТекстВыбораПолей + ",
				|	Т." + Колонка.Имя + " КАК " + Колонка.Имя;
