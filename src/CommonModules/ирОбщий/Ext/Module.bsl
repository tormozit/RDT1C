				Если СравнитьЗначенияСвойствЛкс(СтрокаДерева, Структура, Структура.СвойстваДляСравнения) Тогда 
					Результат = Структура[ИмяКолонки];
					Прервать;
				КонецЕсли; 
			КонецЦикла;
		КонецЕсли; 
		Если Результат = Неопределено Тогда
			Результат = СтрокаДерева[ИмяКолонки];
		КонецЕсли;
