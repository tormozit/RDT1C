			СтруктураЭлемента.Вставить("Вид", ирОбщий.МножественноеИмяМДЛкс(Фрагменты[0]));
			СтруктураЭлемента.Вставить("Имя", Фрагменты[1]);
			ФормаИнтерфейснойПанели.ДобавитьСтрокуВСтатическуюВетку(СтруктураЭлемента, Ложь);
		КонецЕсли;
	КонецЕсли; 
	
