	ФормаСравнителя.Объект2 = Значение2;
	ФормаСравнителя.ПараметрТекущееСвойство = ТекущееСвойство;
	Если Модально Тогда
		ФормаСравнителя.ОткрытьМодально();
	Иначе
		ФормаСравнителя.Открыть();
	КонецЕсли; 
	
