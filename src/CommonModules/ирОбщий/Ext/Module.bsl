		Или СтрНайтиЛкс(Параметр3, "%")
		Или СтрНайтиЛкс(Параметр4, "%")
		Или СтрНайтиЛкс(Параметр5, "%")
		Или СтрНайтиЛкс(Параметр6, "%");
	
