		Копия.Колонки.Добавить("Оригинал");
		Копия.ЗагрузитьКолонку(Строки, "Оригинал");
		Копия.Сортировать(СтрокаСортировки, СравнениеЗначений);
		Строки = Копия.ВыгрузитьКолонку("Оригинал");
	КонецЕсли;
	Возврат Строки;
