		Или Фрагменты[1] = "ирДинамическийСписок"
		Или Фрагменты[1] = "ирРедакторОбъектаБД"
		Или Фрагменты[1] = "ирИнтерфейснаяПанель"
		Или Фрагменты[1] = "ирИсследовательОбъектов"
