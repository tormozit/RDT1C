	КонецЕсли;
	Вхождения = НайтиРегВыражениеЛкс(СтрокаЗапускаПроцесса, "[-/]debug\s+(-http)?"); 
	Если Вхождения.Количество() > 0 Тогда
		Если Вхождения[0].Подгруппы[0] <> Неопределено Тогда 
			РежимОтладки = "http"; 
		Иначе
			РежимОтладки = "tcp"; 
		КонецЕсли; 
