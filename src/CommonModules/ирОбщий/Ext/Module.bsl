				КонецЕсли; 
				ОписаниеОшибки = ОписаниеОшибки(); // Для отладки
				// Это внешняя БД
				Продолжить;
			КонецПопытки; 
			Для Каждого РезультатЗапроса Из РезультатПакета Цикл
				Результат.Добавить(РезультатЗапроса.Выгрузить());
			КонецЦикла;
			Если Истина
