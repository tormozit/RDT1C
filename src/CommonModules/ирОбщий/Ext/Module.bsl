		ИмяБД = ПараметрыСоединения.ИмяБД;
		ИмяПользователя = ПараметрыСоединения.ИмяПользователя;
		Пароль = ПараметрыСоединения.Пароль;
		ТипСУБД = ПараметрыСоединения.ТипСУБД;
	КонецЕсли; 
