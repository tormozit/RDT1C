			Иначе
				Байт1=Слово%16;
				Байт2=Цел(Слово/16);
				Результат=Результат+DigitDECtoHEXЛкс(Байт2)+DigitDECtoHEXЛкс(Байт1);
			КонецЕсли; 
		Иначе
			Результат=Результат+"??";
		КонецЕсли; 
		Счетчик = Счетчик + 1;
		Если МаксЭлементов = Счетчик Тогда
			Результат = Результат + "...";
			Прервать;
		КонецЕсли;
	КонецЦикла; 
	Возврат "0x"+Результат;
