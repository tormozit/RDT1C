Функция МассивВСтрокуКомандыЛкс(КомандаЗапуска) Экспорт
	
	Результат = Новый Массив;
	НужныКавычки = Ложь;
	Для Каждого Аргумент Из КомандаЗапуска Цикл
		Если Результат.Количество() > 0 Тогда 
			Результат.Добавить(" ")
		КонецЕсли;
		НужныКавычки = Ложь
			Или Аргумент = Неопределено
			Или ПустаяСтрока(Аргумент)
			Или Найти(Аргумент, " ")
			Или Найти(Аргумент, Символы.Таб)
			Или Найти(Аргумент, "&")
			Или Найти(Аргумент, "(")
			Или Найти(Аргумент, ")")
			Или Найти(Аргумент, "[")
			Или Найти(Аргумент, "]")
			Или Найти(Аргумент, "{")
			Или Найти(Аргумент, "}")
			Или Найти(Аргумент, "^")
			Или Найти(Аргумент, "=")
			Или Найти(Аргумент, ";")
			Или Найти(Аргумент, "!")
			Или Найти(Аргумент, "'")
			Или Найти(Аргумент, "+")
			Или Найти(Аргумент, ",")
			Или Найти(Аргумент, "`")
			Или Найти(Аргумент, "~")
			Или Найти(Аргумент, "$")
			Или Найти(Аргумент, "|");
		Если НужныКавычки Тогда 
			Результат.Добавить("""");
		КонецЕсли;
		Результат.Добавить(СтрЗаменить(Аргумент, """", """"""));
		Если НужныКавычки Тогда 
			Результат.Добавить("""");
		КонецЕсли;
	КонецЦикла;
	Возврат СтрСоединитьЛкс(Результат, "");
	
