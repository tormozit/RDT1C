				ИсЛкс(Объект,, ОтложенноеВыполнение);
			КонецЕсли;
		#КонецЕсли
	Иначе
		СтруктураПараметров = СтруктураОбъектаДляОтладкиЛкс(Объект, Объект2, ВнешниеНаборыДанных, ПорогОбрезкиВременнойТаблицы);
