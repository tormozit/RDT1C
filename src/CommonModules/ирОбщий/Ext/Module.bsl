	СтруктураСсылкиСтрокиМодуля.Вставить("ПараметрМетода", ПараметрМетода);
	СтруктураСсылкиСтрокиМодуля.Вставить("СмещениеСтрокиМетода", СмещениеСтрокиМетода); 
