			Если ТолькоКоличествоСтрок Тогда
				Результат[ПолноеИмяМДРегистра] = Результат[ПолноеИмяМДРегистра][0][0];
			КонецЕсли; 
			ИндексВПакете = ИндексВПакете + 1;
		КонецЦикла;
	КонецЕсли; 
