	Если RecordsetUse = Истина Тогда
		ОбъектЗапрос = Новый COMОбъект("ADODB.Recordset");
		ОбъектЗапрос.ActiveConnection = СоединениеADO;
		Если CursorType<>Неопределено Тогда
