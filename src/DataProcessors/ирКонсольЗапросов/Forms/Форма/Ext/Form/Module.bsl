	// Передача параметров запроса
	cтПараметрыТип=ТипЗнч(пЗначенияПараметров);
	ПарТипADOТип=ТипЗнч(ТипыПараметров);
	
	ПараметрыКоличество=0;
	Если Ложь
		Или cтПараметрыТип = ТипаМассив 
