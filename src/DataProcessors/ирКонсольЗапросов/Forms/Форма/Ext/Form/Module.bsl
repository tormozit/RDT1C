	Если Prepared = Истина Тогда
		Если ОбъектЗапрос = Неопределено Тогда
			Инициация = Истина; 
		Иначе
			Инициация = НЕ ОбъектЗапрос.Prepared; 
		КонецЕсли; 
	КонецЕсли;
	
	соИтогиБатчей = Неопределено;
	Если ОпцияРезультатADOВРезультатЗапросаGWF Тогда
