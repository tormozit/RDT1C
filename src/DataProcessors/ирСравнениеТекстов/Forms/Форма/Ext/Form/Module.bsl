	РегВыражение.Pattern = "(" + мПолеТекстаПрограммы2.шПредИмяПрямое + ")(" + ирОбщий.СтрСоединитьЛкс(ИменаМетодов, "|") + ")(\()";
	НовыйТекст = РегВыражение.Заменить(НовыйТекст, "$1" + Префикс + "$2$3");
	ирКлиент.ОткрытьТекстЛкс(НовыйТекст, "Расширение модуля из сравнения текстов", ВариантСинтаксиса, , КлючУникальности);
