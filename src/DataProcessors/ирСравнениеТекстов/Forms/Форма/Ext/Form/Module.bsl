				Если Параметры1 = Неопределено Тогда
					Параметры1 = Новый Массив;
				КонецЕсли;
				Параметры2 = мПлатформа.ПараметрыМетодаМодуля(МетодыЭлемент);
				Если Параметры2 = Неопределено Тогда
					Параметры2 = Новый Массив;
				КонецЕсли;
				ОбщиеПараметры = Новый Массив;
				Для Счетчик = 1 По Мин(Параметры1.Количество(), Параметры2.Количество()) Цикл
					СтрокаПараметра2 = Параметры2[Счетчик-1];
					ОбщиеПараметры.Добавить(СтрокаПараметра2.Имя);
				КонецЦикла;
				ФактическиеПараметрыПрокладки = ирОбщий.СтрСоединитьЛкс(ОбщиеПараметры);
			Иначе
				НачалоОпределенияСОписанием = "";
			КонецЕсли;
		КонецЕсли;
		РасширениеМетода = мПолеТекстаПрограммы2.ТекстМетодаСОписанием(МетодыЭлемент, ПрефиксЦикл, НачалоОпределенияСОписанием, ФактическиеПараметрыПрокладки);
		НовыйТекст.Добавить(СокрЛП(РасширениеМетода));
	КонецЦикла;
	НовыйТекст = ирОбщий.СтрСоединитьЛкс(НовыйТекст, Символы.ПС + Символы.ПС);
	РегВыражение = ирКэш.РегВыражениеЛкс();
