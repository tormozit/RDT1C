				ИмяМетода = Вхождение.SubMatches(0);
				Если ИмяМетода = Неопределено Тогда
					ИмяМетода = "<ИнициацияМодуля>";
				КонецЕсли;
				НужноеОписаниеМетода = КэшМодуля.Методы.Найти(ИмяМетода, "Метод");
