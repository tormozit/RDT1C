			КонецЕсли;
			Если Ложь
				Или Выражение = "Ложь"
				Или Выражение = "Истина"
				Или Выражение = "False"
				Или Выражение = "True"
			Тогда
				ИмяОбщегоТипа = "Булево";
				Продолжить;
			КонецЕсли; 
			ТекстДляПоискаОпределения = Лев(ТелоБезКомментариев, ВхождениеВозврата.FirstIndex - 1);
