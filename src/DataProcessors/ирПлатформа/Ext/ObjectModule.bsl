	КонецЕсли;
	ВхожденияБлоков = ирОбщий.НайтиРегВыражениеЛкс(Текст, шПустоеНачалоСтроки + "#Удаление\s[\S\s]*?" +  шПустоеНачалоСтроки + "#КонецУдаления",, Ложь);
