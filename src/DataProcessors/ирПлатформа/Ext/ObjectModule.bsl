							ТаблицаТиповСлова = КоллекцияЗначений[СловоФильтр].Скопировать();
							ТаблицаТиповСлова.ЗаполнитьЗначения(ОписаниеСвойства, "СтрокаОписания");
							КоллекцияЗначений[СловоФильтр] = ТаблицаТиповСлова;
