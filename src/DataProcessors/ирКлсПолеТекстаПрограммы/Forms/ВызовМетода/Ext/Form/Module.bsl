	Иначе
		СтрокаПараметра.Выражение = "";
	КонецЕсли;
	Если Истина
		И ПустаяСтрока(СтрокаПараметра.Выражение) 
		И мЯзыкПрограммы = 0
	Тогда
		СтрокаТипа = СтрокаОбщегоТипаСКонструктором(СтрокаПараметра.ТипЗначения, СтрокаПараметра.Имя);
		Если СтрокаТипа <> Неопределено Тогда
			СтрокаПараметра.Выражение = МаркерСозданияПеременной();
		КонецЕсли;
