							ПропущенныйФрагмент = Сред(СловоСтроки, ПозицияВСлове, НоваяПозицияСлова);
						КонецЕсли;
						ПозицияВСлове = ПозицияВСлове + НоваяПозицияСлова;
					Иначе
						ПропущенныйФрагмент = "";
					КонецЕсли;
					ПодходитСимвол = ПредСовпадение Или ПозицияВСлове = 1;
					Если Не ПодходитСимвол Тогда
						СимволСлова = Сред(СловоСтроки, ПозицияВСлове, 1);
						ПодходитСимвол = ВРег(СимволСлова) = СимволСлова;
					КонецЕсли;
					Если ПодходитСимвол Тогда
						Если ВыделитьВхождения Тогда
							Результат.Добавить(ПропущенныйФрагмент);
							Если Не ПредСовпадение Тогда
								Результат.Добавить(Лев(ВыделениеРезультатовПоиска, 1));
							КонецЕсли;
							Результат.Добавить(Сред(СловоСтроки, ПозицияВСлове, 1));
						КонецЕсли;
						ПредСовпадение = Истина;
