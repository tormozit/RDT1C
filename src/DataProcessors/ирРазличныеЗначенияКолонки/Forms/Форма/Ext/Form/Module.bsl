Функция ЗаполнитьИменаТиповЗначений(Знач ТаблицаРезультата)
	
	#Если Сервер И Не Сервер Тогда
		ТаблицаРезультата = Новый ТаблицаЗначений;
	#КонецЕсли
	ОсновнойЭУ = ЭтаФорма.ЭлементыФормы.Значения;
	ОсновнойЭУ.Значение.Загрузить(ТаблицаРезультата);
	ЭтаФорма.ЗначенияРасширенные = ТаблицаРезультата;
	ЗначенияРасширенные.Колонки.Добавить("Пометка");
	КолонкиТЧ = ОсновнойЭУ.Значение.ВыгрузитьКолонки().Колонки;
	РазличныеТипы = ирОбщий.РазличныеЗначенияКолонкиТаблицыЛкс(ТаблицаРезультата, "ТипЗначения");
	#Если Сервер И Не Сервер Тогда
		РазличныеТипы = Новый Массив;
	#КонецЕсли
	Если РазличныеТипы.Количество() = 1 Тогда
		ЭтоМоноТип = Истина;
		СтрокаТЧ = Значения[0];
		ирОбщий.ОбновитьТипЗначенияВСтрокеТаблицыЛкс(СтрокаТЧ, "", мОписаниеТиповКолонки,,, КолонкиТЧ, ?(СтрокаТЧ.ТипЗначения = "Null", Null, ТаблицаРезультата[ТаблицаРезультата.Количество() - 1].Значение));
		УстановитьМонотип(СтрокаТЧ.ИмяТипаЗначения);
	Иначе
		ЭтоМоноТип = Ложь;
		КэшТипов = Новый Соответствие;
		ТабличнаяЧастьРезультатов = ОсновнойЭУ.Значение;
		Для Индекс = 0 По ТаблицаРезультата.Количество() - 1 Цикл
			СтрокаРезультата = ТаблицаРезультата[Индекс];
			СтрокаТЧ = ТабличнаяЧастьРезультатов[Индекс];
			СтрокаСТипомЗначения = КэшТипов[СтрокаРезультата.ТипЗначения];
			Если СтрокаСТипомЗначения = Неопределено Тогда
				ирОбщий.ОбновитьТипЗначенияВСтрокеТаблицыЛкс(СтрокаТЧ, "", мОписаниеТиповКолонки,,, КолонкиТЧ, СтрокаРезультата.Значение);
				КэшТипов[СтрокаРезультата.ТипЗначения] = СтрокаТЧ;
			Иначе
				СтрокаТЧ.ИмяТипаЗначения = СтрокаСТипомЗначения.ИмяТипаЗначения;
				СтрокаТЧ.ТипЗначения = СтрокаСТипомЗначения.ТипЗначения;
			КонецЕсли; 
		КонецЦикла;
	КонецЕсли; 
	Возврат ЭтоМоноТип;

