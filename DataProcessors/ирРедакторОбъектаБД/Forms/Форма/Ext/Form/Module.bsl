					СтрокаУзла.УзелОбмена = Узел;
					СтрокаУзла.ИндексКартинки = ирОбщий.ПолучитьИндексКартинкиСсылкиЛкс(Узел);
				КонецЕсли;
			КонецЦикла;
		//КонецЕсли;
	КонецЦикла;
	Если ИзмененияНаУзлах.Строки.Количество() = 0 Тогда
		Возврат;
	КонецЕсли; 
	
	Запрос = Новый Запрос("
	|ВЫБРАТЬ 
	|	Узел, 
	|	НомерСообщения 
	|ИЗ " + ВыбОбъект.Метаданные().ПолноеИмя() + ".Изменения 
