				СтрокаУзла.Пометка = Истина;
				СтрокаУзла.НомерСообщения = СтрокаРегистрации.НомерСообщения;
				//СтрокаУзла.Выгружен = СтрокаРегистрации.НомерСообщения <> Null;
			КонецЕсли;
			ирОбщий.УстановитьПометкиРодителейЛкс(СтрокаУзла);
		КонецЦикла;
	КонецЦикла;
	
