	Индикатор = ирОбщий.ПолучитьИндикаторПроцессаЛкс(, "Настройки");
	Пока 1=1 Цикл
		Попытка
			ЭлементСчитан = Выборка.Следующий();
		Исключение
			ОписаниеОшибки = ОписаниеОшибки();
			Сообщить("Ошибка чтения настройки");
			Продолжить;
		КонецПопытки;
